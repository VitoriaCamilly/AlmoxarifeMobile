<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="104dp"
    tools:layout_editor_absoluteY="0dp">

    <Button
        android:id="@+id/buttonDevolucoesPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Devoluções"
        app:layout_constraintTop_toBottomOf="@+id/tituloPedidos"
        tools:layout_editor_absoluteX="158dp" />

    <Button
        android:id="@+id/buttonEntregasPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Entregas"
        app:layout_constraintTop_toBottomOf="@+id/tituloPedidos"
        tools:layout_editor_absoluteX="32dp" />

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="508dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonEntregasPedidos"
        tools:layout_editor_absoluteX="33dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <TextView
        android:id="@+id/tituloPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:text="Pedidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>